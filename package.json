{
  "name": "portfolio-v2",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro check && pnpm run build-setup && astro build && pnpm run kill-assets",
    "build-setup": "pnpm run serve-assets & pnpm run wait-for-assets",
    "serve-assets": "serve -p 3001 --no-port-switching ./src/assets",
    "wait-for-assets": "wait-on -t 5000 http://localhost:3001/og/avatar.jpeg",
    "kill-assets": "kill-port 3001 || true",
    "preview": "astro preview",
    "astro": "astro"
  },
  "dependencies": {
