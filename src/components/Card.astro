---
import { CardHeader, CardTitle, Card as ShadcnCard } from '@/components/ui/card'

interface Props {
  colSpan?: string
  rowSpan?: string
}

const { colSpan, rowSpan } = Astro.props
const hasTitle = Astro.slots.has('title')
---

<ShadcnCard
  className={`card-animate align-start relative col-span-1 flex h-auto w-full transform flex-col justify-start overflow-hidden rounded-2xl shadow-lg ${
    colSpan || 'md:col-span-2'
  } ${rowSpan || ''}`}
>
  {
    hasTitle && (
      <CardHeader className="border-b mb-4">
        <CardTitle className="flex items-center gap-3">
          <slot name="title" />
        </CardTitle>
      </CardHeader>
    )
  }

  <slot />
</ShadcnCard>
