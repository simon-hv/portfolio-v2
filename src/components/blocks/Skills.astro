---
import Card from '@/components/Card.astro'
import { Badge } from '@/components/ui/badge'
import { CardContent } from '@/components/ui/card'
import { TestTubeDiagonal } from 'lucide-react'

const skills = [
  'React',
  'Typescript',
  'Javascript',
  'Next',
  'Node.js',
  'Angular',
  'Redux / NgRx',
  'RxJS',
  'Nx',
  'Git',
  'AWS',
  'GraphQL',
  'Docker',
  'Gitlab CI/CD',
  'CircleCI',
]
---

<Card className='order-3 lg:order-2' colSpan="md:col-span-2 lg:col-span-1" rowSpan="row-span-2">
  <Fragment slot="title">
    <TestTubeDiagonal /> Skills
  </Fragment>

  <CardContent className="h-full">
    <ul class="flex h-full flex-wrap justify-center gap-3">
      {
        skills.map((skill) => (
          <li>
            <Badge>{skill}</Badge>
          </li>
        ))
      }
    </ul>
  </CardContent>
</Card>
