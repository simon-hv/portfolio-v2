---
import Card from '@/components/Card.astro'
import { buttonVariants } from '@/components/ui/button'
import { CardContent } from '@/components/ui/card'
import { FileSpreadsheet } from 'lucide-react'
---

<Card colSpan="md:col-span-1" rowSpan="md:row-span-4 lg:row-span-2">
  <Fragment slot="title">
    <FileSpreadsheet /> CV
  </Fragment>

  <CardContent
    className="flex flex-grow flex-col items-center justify-evenly gap-4"
  >
    <object data="/cv.pdf" type="application/pdf" width="100%" height="250px">
      <img src="/cv.jpg" alt="CV" />
    </object>

    <a
      href="/cv.pdf"
      target="_blank"
      rel="noopener noreferrer"
      class={buttonVariants({ variant: 'default', size: 'lg' })}
      title="Linkedin"
    >
      Voir mon CV
    </a>
  </CardContent>
</Card>

<style>
  object {
    display: flex;
    justify-content: center;

    > img {
      height: 250px;
    }
  }
</style>
