---
import { Image } from 'astro:assets'

export interface Props {
  title: string
  image: ImageMetadata
}

const { title, image } = Astro.props
---

<li class="flex rounded-md shadow-sm">
  <div
    class="flex flex-shrink-0 items-center justify-center rounded-l-md bg-white text-sm font-medium text-white"
  >
    <Image src={image} alt={title} class="h-8 w-8" />
  </div>
  <div
    class="flex items-center justify-between truncate rounded-r-md border-l border-l-gray-200 bg-white"
  >
    <div class="flex-1 truncate px-2 py-1 text-sm">
      <span class="font-medium text-gray-900">
        {title}
      </span>
    </div>
  </div>
</li>
